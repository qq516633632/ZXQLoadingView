<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    >
    <Button
    android:id="@+id/showmessage_dialog"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="带文字不可消失Loading"
    android:layout_marginTop="10dp"
    />

    <Button
        android:id="@+id/showmessage_dialog_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="带文字可消失Loading"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/showmessage_dialog_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="无文字不可消失"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/showmessage_dialog_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="无文字可消失"
        android:layout_marginTop="10dp"
        />

</LinearLayout>



</LinearLayout>
